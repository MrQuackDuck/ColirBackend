    "GoogleClientSecret": "GOOGLE OAUTH2 CLIENT SECRET GOES HERE",
    "GoogleRedirectLink": "http://localhost:3001/googleAuth"
  },
  "DatabaseEncryption": {
    "EncryptionPassword": "16-char-password",
