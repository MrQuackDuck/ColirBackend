{
  "AppSettings": {
    "MinUsernameLength": "2",
    "MaxUsernameLength": "50",
    "MinRoomNameLength": "2",
    "MaxRoomNameLength": "50",
    "MaxMessageLength": "4096",
    "MaxRoomStorageCapacityInBytes": "104857600",
    "RoomFilesFolderName": "wwwroot/RoomFiles"
