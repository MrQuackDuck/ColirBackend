    "RefreshTokenExpiryInMinutes": "10080"
  },
  "OAuth2": {
    "GitHubClientId": "GITHUB OAUTH2 CLIENT ID GOES HERE",
    "GitHubSecret": "GITHUB OAUTH2 CLIENT SECRET GOES HERE",
